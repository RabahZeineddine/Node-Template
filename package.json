{
  "name": "node-template",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "init": "./node_modules/.bin/tsc --init",
    "set-env": "rm -rf .env && ts-node environments",
    "predev": "cross-env NODE_ENV=development npm run set-env",
    "dev": "npm run nodemon",
    "nodemon": "nodemon -e '*' --watch 'src/' --exec 'npm run start:dev'",
    "preqa": "cross-env NODE_ENV=quality_assurance npm run set-env",
    "qa": "npm run nodemon",
    "prelocal": "cross-env NODE_ENV=local npm run set-env",
    "local": "npm run nodemon",
    "preprod": "cross-env NODE_ENV=production npm run set-env",
    "prod": "npm run nodemon",
    "start:dev": "ts-node src",
    "linter": "eslint src/**/*.ts",
    "build": "rm -rf ./dist && tsc",
    "postbuild": "copyfiles -s 'src/**/*' -e 'src/**/*.ts' -u 1 dist",
    "start": "npm run server",
    "server": "node dist/index",
    "clean-install": "rm -rf node_modules && npm install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run linter"
    }
  },
  "author": "Rabah Zeineddine",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^6.8.0",
    "nodemon": "^2.0.4"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@types/cors": "^2.8.7",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.8",
    "@types/hapi__joi": "^17.1.6",
    "@types/mongoose": "^5.7.36",
    "@types/morgan": "^1.9.1",
    "@types/swagger-jsdoc": "^3.0.2",
    "@types/swagger-ui-express": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.3.0",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "chalk": "^3.0.0",
    "copyfiles": "^2.3.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-joi-validation": "^4.0.3",
    "husky": "^4.2.3",
    "joi": "^14.3.1",
    "mongoose": "^5.9.6",
    "morgan": "^1.10.0",
    "morgan-json": "^1.1.0",
    "swagger-jsdoc": "^4.0.0",
    "swagger-ui-express": "^4.1.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "winston": "^3.3.3"
  }
}
