{
  "name": "node-template",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "init": "./node_modules/.bin/tsc --init",
    "predev": "cross-env NODE_ENV=development",
    "dev": "npm run nodemon",
    "nodemon": "nodemon -e '*' --watch 'src/' --exec 'npm run start:dev'",
    "preqa": "cross-env NODE_ENV=quality_assurance",
    "qa": "npm run nodemon",
    "prelocal": "cross-env NODE_ENV=local",
    "local": "npm run nodemon",
    "preprod": "cross-env NODE_ENV=production",
    "prod": "npm run nodemon",
    "start:dev": "ts-node src",
    "linter": "eslint src/**/*.ts",
    "build": "rm -rf ./dist && tsc",
    "postbuild": "copyfiles -s 'src/**/*' -e 'src/**/*.ts' -u 1 dist",
    "start": "npm run server",
    "server": "node dist/index",
    "clean-install": "rm -rf node_modules && npm install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run linter"
    }
  },
  "author": "Rabah Zeineddine",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.7",
    "@types/errorhandler": "^1.5.0",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.3.0",
    "eslint": "^6.8.0",
    "nodemon": "^2.0.4",
    "ts-node": "^9.0.0",
    "copyfiles": "^2.3.0",
    "cross-env": "^7.0.2",
    "husky": "^4.2.3",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "axios": "^0.20.0",
    "chalk": "^3.0.0",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "joi": "^17.3.0",
    "mqtt": "^4.2.6",
    "winston": "^3.3.3"
  }
}
